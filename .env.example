# Environment Variables Template for Vercel Deployment

# Node Environment
NODE_ENV=production

# Application Settings
VITE_APP_TITLE="Fusion Drawing Studio"
VITE_APP_VERSION="1.0.0"

# Canvas Settings
VITE_MAX_CANVAS_SIZE=5000
VITE_MAX_HISTORY_STATES=50

# Performance Settings
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_TOUCH_THROTTLE_MS=16

# API Configuration
VITE_API_BASE_URL=/api

# Feature Flags
VITE_ENABLE_TOUCH_GESTURES=true
VITE_ENABLE_PRESSURE_SENSITIVITY=true
VITE_ENABLE_AUTO_SAVE=true

# Analytics (optional)
# VITE_ANALYTICS_ID=your_analytics_id

# Error Reporting (optional) 
# VITE_SENTRY_DSN=your_sentry_dsn
